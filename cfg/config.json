      },
      "hierarchicalScopesResponse": {
        "messageObject": "io.restorecommerce.auth.HierarchicalScopesResponse"
      },
      "topics": {
        "command": {
          "topic": "io.restorecommerce.command",
          "events": [
            "restoreCommand",
            "healthCheckCommand",
            "resetCommand",
            "versionCommand",
            "configUpdateCommand",
            "flushCacheCommand"
          ]
        },
        "user": {
          "topic": "io.restorecommerce.user",
          "events": [
            "hierarchicalScopesRequest"
          ]
        }
      }
    },
    "enableCRUDEvents": "true"
  },
  "authorization": {
    "service": "acs-srv",
    "enabled": true,
    "enforce": true,
