{
  "name": "@restorecommerce/resource-srv",
  "version": "0.0.4",
  "description": "Restore Commerce Rsource microservice",
  "main": "lib/start.js",
  "author": "Invend GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/resource-srv.git"
  },
  "license": "MIT",
  "keywords": [
    "restore",
    "commerce",
    "microservice",
    "resource"
  ],
  "dependencies": {
    "@restorecommerce/acs-client": "^0.2.19",
    "@restorecommerce/chassis-srv": "^0.1.4",
    "@restorecommerce/cluster-service": "^0.1.4",
    "@restorecommerce/grpc-client": "0.0.8",
    "@restorecommerce/kafka-client": "^0.1.12",
    "@restorecommerce/protos": "0.0.16",
    "@restorecommerce/resource-base-interface": "0.0.6",
    "@restorecommerce/service-config": "^0.3.2",
    "lodash": "^4.17.19",
    "redis": "^3.0.2"
  },
  "devDependencies": {
    "@restorecommerce/logger": "^0.4.0",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.27",
    "@types/redis": "^2.8.25",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/eslint-plugin-tslint": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.5.0",
    "eslint-plugin-prefer-arrow-functions": "^3.0.1",
    "grpc-mock": "^0.7.0",
    "mocha": "^8.0.1",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "should": "^13.2.3",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2"
  },
  "scripts": {
    "start": "npm run createtopics && node lib/start.js",
    "dev": "cross-env NODE_ENV=development nodemon --watch './src/**/*.ts' --exec 'ts-node' src/start.ts",
    "pretest": "npm run build && npm run tsctests && npm run createtopics",
    "tsctests": "tsc -d -p tsconfig.test.json",
    "test": "npm run lint && nyc npm run mocha && nyc npm run mocha:acs",
    "lint": "eslint src --ext .ts",
    "mocha": "cross-env NODE_ENV=test DISABLE_ACS=false mocha -R spec ./test/resource_srv_test.js --exit",
    "mocha:acs": "cross-env NODE_ENV=test mocha -R spec ./test/resource_srv_acs_test.js --full-trace --exit",
    "mochadebug": "cross-env NODE_ENV=test; mocha -R spec ./test/*.js --full-trace --inspect-brk",
    "lcov-report": "nyc report --reporter=lcov",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "createtopics": "node setupTopics.js io.restorecommerce.command",
    "build:tsc": "tsc -d",
    "build:clean": "rimraf lib",
    "build": "npm-run-all lint build:clean build:tsc",
    "healthcheck": "node lib/healthcheck.js",
    "postinstall": "npm run build:tsc"
  },
  "engines": {
    "node": ">= 12.0.0"
  }
}
