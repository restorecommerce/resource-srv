{
  "name": "@restorecommerce/resource-srv",
  "version": "1.3.4",
  "description": "Restore Commerce Resource Microservice",
  "main": "lib/start.js",
  "author": "n-fuse GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/resource-srv.git"
  },
  "license": "MIT",
  "keywords": [
    "restore",
    "commerce",
    "microservice",
    "resource"
  ],
  "type": "module",
  "dependencies": {
    "@restorecommerce/acs-client": "^1.4.11",
    "@restorecommerce/chassis-srv": "^1.4.7",
    "@restorecommerce/cluster-service": "^1.0.2",
    "@restorecommerce/grpc-client": "^2.1.0",
    "@restorecommerce/kafka-client": "^1.1.19",
    "@restorecommerce/rc-grpc-clients": "^5.1.19",
    "@restorecommerce/resource-base-interface": "^1.4.5",
    "@restorecommerce/service-config": "^1.0.10",
    "lodash-es": "^4.17.21",
    "redis": "^4.6.13",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@alenon/grpc-mock-server": "^3.1.9",
    "@grpc/proto-loader": "^0.7.10",
    "@restorecommerce/dev": "^0.0.6",
    "@restorecommerce/logger": "^1.2.8",
    "@types/lodash-es": "^4.17.12",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.0",
    "@types/redis": "^4.0.11",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/eslint-plugin-tslint": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "c8": "^9.1.0",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "esbuild": "^0.20.0",
    "eslint": "^8.54.0",
    "eslint-plugin-prefer-arrow-functions": "^3.2.4",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "should": "^13.2.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "start": "node lib/start.js",
    "dev": "cross-env NODE_ENV=development nodemon --watch './src/**/*.ts' --exec node --loader ts-node/esm ./src/start.ts",
    "tsctests": "tsc -d -p tsconfig.test.json",
    "test": "npm run lint && c8 --reporter=text npm run mocha",
    "lint": "eslint src --ext .ts",
    "mocha": "cross-env NODE_ENV=test mocha --full-trace --exit --timeout 30000",
    "mochadebug": "cross-env NODE_ENV=test; mocha -R spec ./test/*.js --full-trace --inspect-brk",
    "lcov-report": "nyc report --reporter=lcov",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "build:tsc": "esbuild ./src/start.ts --bundle --platform=node --outfile=lib/start.js --minify --tree-shaking=true --sourcemap=inline",
    "build:clean": "rimraf lib",
    "build": "npm-run-all lint build:clean build:tsc",
    "postinstall": "npm run build:tsc"
  },
  "engines": {
    "node": ">= 20.8.0"
  }
}
