{
  "name": "@restorecommerce/resource-srv",
  "version": "0.0.1",
  "description": "Restore Commerce Rsource microservice",
  "main": "start.js",
  "author": "Invend GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/resource-srv.git"
  },
  "license": "MIT",
  "keywords": [
    "restore",
    "commerce",
    "microservice",
    "resource"
  ],
  "dependencies": {
    "@restorecommerce/chassis-srv": "github:restorecommerce/chassis-srv",
    "@restorecommerce/cluster-service": "^0.1.4",
    "@restorecommerce/grpc-client": "^0.0.1",
    "@restorecommerce/kafka-client": "^0.1.5",
    "@restorecommerce/protos": "github:restorecommerce/protos",
    "@restorecommerce/resource-base-interface": "github:restorecommerce/resource-base-interface",
    "@restorecommerce/service-config": "^0.1.4",
    "co": "^4.6.0",
    "redis": "^2.8.0"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "@types/redis": "^2.8.13",
    "coveralls": "^3.0.5",
    "cross-env": "^5.2.1",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "rimraf": "^3.0.0",
    "should": "^13.2.3",
    "ts-node": "^8.3.0",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3"
  },
  "scripts": {
    "start": "node start.js",
    "dev": "cross-env NODE_ENV=development nodemon --watch './*ts' --exec 'ts-node' start.ts",
    "pretest": "npm run build && npm run tsctests",
    "tsctests": "tsc -d -p tsconfig.test.json",
    "test": "npm run lint && nyc npm run mocha",
    "lint": "tslint *.ts",
    "mocha": "cross-env NODE_ENV=test mocha -R spec ./test/*.js --exit",
    "mochadebug": "cross-env NODE_ENV=test; mocha -R spec ./test/*.js --full-trace --inspect-brk",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "build:tsc": "tsc -d",
    "build:clean": "rimraf service.js start.js",
    "build": "npm-run-all lint build:clean build:tsc"
  },
  "engines": {
    "node": ">= 9.2.0"
  }
}
