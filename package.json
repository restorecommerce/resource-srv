{
  "name": "@restorecommerce/resource-srv",
  "version": "0.0.1",
  "description": "Restore Commerce Rsource microservice",
  "main": "lib/start.js",
  "author": "Invend GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/resource-srv.git"
  },
  "license": "MIT",
  "keywords": [
    "restore",
    "commerce",
    "microservice",
    "resource"
  ],
  "dependencies": {
    "@restorecommerce/chassis-srv": "0.0.3",
    "@restorecommerce/cluster-service": "^0.1.4",
    "@restorecommerce/grpc-client": "^0.0.5",
    "@restorecommerce/kafka-client": "^0.1.7",
    "@restorecommerce/protos": "0.0.4",
    "@restorecommerce/resource-base-interface": "^0.0.1",
    "@restorecommerce/service-config": "^0.1.6",
    "co": "^4.6.0",
    "lodash": "^4.17.19",
    "redis": "^3.0.2"
  },
  "devDependencies": {
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.1",
    "@types/redis": "^2.8.17",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/eslint-plugin-tslint": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "coveralls": "^3.0.11",
    "cross-env": "^7.0.2",
    "eslint": "^6.7.0",
    "eslint-plugin-prefer-arrow-functions": "^3.0.1",
    "mocha": "^7.1.1",
    "nodemon": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.1",
    "rimraf": "^3.0.2",
    "should": "^13.2.3",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "start": "npm run createtopics && node lib/start.js",
    "dev": "cross-env NODE_ENV=development nodemon --watch './src/**/*.ts' --exec 'ts-node' src/start.ts",
    "pretest": "npm run build && npm run tsctests && npm run createtopics",
    "tsctests": "tsc -d -p tsconfig.test.json",
    "test": "npm run lint && nyc npm run mocha",
    "lint": "eslint src --ext .ts",
    "mocha": "cross-env NODE_ENV=test mocha -R spec ./test/*.js --exit",
    "mochadebug": "cross-env NODE_ENV=test; mocha -R spec ./test/*.js --full-trace --inspect-brk",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "createtopics": "node setupTopics.js io.restorecommerce.command",
    "build:tsc": "tsc -d",
    "build:clean": "rimraf lib",
    "build": "npm-run-all lint build:clean build:tsc",
    "healthcheck": "node lib/healthcheck.js",
    "postinstall": "npm run build:tsc"
  },
  "engines": {
    "node": ">= 9.2.0"
  }
}
