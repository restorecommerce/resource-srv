{
  "name": "@restorecommerce/resource-srv",
  "version": "1.0.0",
  "description": "Restore Commerce Resource Microservice",
  "main": "lib/start.js",
  "author": "n-fuse GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/resource-srv.git"
  },
  "license": "MIT",
  "keywords": [
    "restore",
    "commerce",
    "microservice",
    "resource"
  ],
  "dependencies": {
    "@restorecommerce/acs-client": "^1.1.4",
    "@restorecommerce/chassis-srv": "^1.2.1",
    "@restorecommerce/cluster-service": "^1.0.2",
    "@restorecommerce/grpc-client": "^2.0.1",
    "@restorecommerce/kafka-client": "^1.0.8",
    "@restorecommerce/rc-grpc-clients": "^3.1.2",
    "@restorecommerce/resource-base-interface": "^1.2.0",
    "@restorecommerce/service-config": "^1.0.5",
    "lodash": "^4.17.21",
    "redis": "^4.6.7",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@alenon/grpc-mock-server": "^3.0.20",
    "@grpc/proto-loader": "^0.7.7",
    "@restorecommerce/logger": "^1.2.3",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.2.5",
    "@types/redis": "^4.0.11",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/eslint-plugin-tslint": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.41.0",
    "eslint-plugin-prefer-arrow-functions": "^3.1.4",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^5.0.1",
    "should": "^13.2.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "scripts": {
    "start": "node lib/start.js",
    "dev": "cross-env NODE_ENV=development nodemon --watch './src/**/*.ts' --exec 'ts-node' src/start.ts",
    "pretest": "npm run build && npm run tsctests",
    "tsctests": "tsc -d -p tsconfig.test.json",
    "test": "npm run lint && nyc npm run mocha && nyc npm run mocha:acs",
    "lint": "eslint src --ext .ts",
    "mocha": "cross-env NODE_ENV=test DISABLE_ACS=false mocha -R spec ./test/resource_srv_test.js --exit",
    "mocha:acs": "cross-env NODE_ENV=test mocha -R spec ./test/resource_srv_acs_test.js --full-trace --exit",
    "mochadebug": "cross-env NODE_ENV=test; mocha -R spec ./test/*.js --full-trace --inspect-brk",
    "lcov-report": "nyc report --reporter=lcov",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "build:tsc": "tsc -d",
    "build:clean": "rimraf lib",
    "build": "npm-run-all lint build:clean build:tsc",
    "postinstall": "npm run build:tsc"
  },
  "engines": {
    "node": ">= 16.0.0"
  }
}
