{
  "name": "@restorecommerce/resource-srv",
  "version": "0.1.1",
  "description": "Restore Commerce Resource Microservice",
  "main": "lib/start.js",
  "author": "n-fuse GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/resource-srv.git"
  },
  "license": "MIT",
  "keywords": [
    "restore",
    "commerce",
    "microservice",
    "resource"
  ],
  "dependencies": {
    "@restorecommerce/acs-client": "^0.4.11",
    "@restorecommerce/chassis-srv": "^0.3.3",
    "@restorecommerce/cluster-service": "^0.1.10",
    "@restorecommerce/grpc-client": "^0.2.10",
    "@restorecommerce/kafka-client": "^0.2.23",
    "@restorecommerce/protos": "^0.4.9",
    "@restorecommerce/resource-base-interface": "^0.2.0",
    "@restorecommerce/service-config": "^0.4.19",
    "lodash": "^4.17.21",
    "redis": "^3.1.1"
  },
  "devDependencies": {
    "@restorecommerce/logger": "^0.10.8",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.11",
    "@types/redis": "^2.8.32",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/eslint-plugin-tslint": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.3.0",
    "eslint-plugin-prefer-arrow-functions": "^3.1.4",
    "grpc-mock": "^0.7.0",
    "mocha": "^9.1.3",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "should": "^13.2.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "scripts": {
    "start": "npm run createtopics && node lib/start.js",
    "dev": "cross-env NODE_ENV=development nodemon --watch './src/**/*.ts' --exec 'ts-node' src/start.ts",
    "pretest": "npm run build && npm run tsctests && npm run createtopics",
    "tsctests": "tsc -d -p tsconfig.test.json",
    "test": "npm run lint && nyc npm run mocha && nyc npm run mocha:acs",
    "lint": "eslint src --ext .ts",
    "mocha": "cross-env NODE_ENV=test DISABLE_ACS=false mocha -R spec ./test/resource_srv_test.js --exit",
    "mocha:acs": "cross-env NODE_ENV=test mocha -R spec ./test/resource_srv_acs_test.js --full-trace --exit",
    "mochadebug": "cross-env NODE_ENV=test; mocha -R spec ./test/*.js --full-trace --inspect-brk",
    "lcov-report": "nyc report --reporter=lcov",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "createtopics": "node setupTopics.js io.restorecommerce.command",
    "build:tsc": "tsc -d",
    "build:clean": "rimraf lib",
    "build": "npm-run-all lint build:clean build:tsc",
    "postinstall": "npm run build:tsc"
  },
  "engines": {
    "node": ">= 12.0.0"
  }
}
