{
  "name": "@restorecommerce/resource-srv",
  "version": "1.5.1",
  "description": "Restore Commerce Resource Microservice",
  "main": "lib/start.js",
  "author": "n-fuse GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/resource-srv.git"
  },
  "license": "MIT",
  "keywords": [
    "restore",
    "commerce",
    "microservice",
    "resource"
  ],
  "type": "module",
  "dependencies": {
    "@restorecommerce/acs-client": "^1.6.6",
    "@restorecommerce/chassis-srv": "^1.6.0",
    "@restorecommerce/grpc-client": "^2.2.1",
    "@restorecommerce/kafka-client": "^1.2.5",
    "@restorecommerce/rc-grpc-clients": "^5.1.27",
    "@restorecommerce/resource-base-interface": "^1.6.0",
    "@restorecommerce/service-config": "^1.0.12",
    "lodash-es": "^4.17.21",
    "redis": "^4.6.13",
    "uuid": "^9.0.1"
  },
  "overrides": {
    "@grpc/grpc-js": "^1.10.6"
  },
  "devDependencies": {
    "@alenon/grpc-mock-server": "^3.1.10",
    "@commitlint/cli": "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "@grpc/proto-loader": "^0.7.12",
    "@restorecommerce/dev": "^0.0.12",
    "@restorecommerce/logger": "^1.2.10",
    "@semantic-release-plus/docker": "^3.1.3",
    "@types/lodash-es": "^4.17.12",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.12.7",
    "@types/redis": "^4.0.11",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/eslint-plugin-tslint": "^7.0.2",
    "@typescript-eslint/parser": "^7.7.0",
    "c8": "^9.1.0",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.21.4",
    "eslint": "^8.56.0",
    "eslint-plugin-prefer-arrow-functions": "^3.3.2",
    "husky": "^9.0.11",
    "mocha": "^10.4.0",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "should": "^13.2.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "start": "node ./lib/start.cjs",
    "dev": "cross-env NODE_ENV=development nodemon --watch './src/**/*.ts' --exec node --loader ts-node/esm ./src/start.ts",
    "tsctests": "tsc -d -p tsconfig.test.json",
    "test": "npm run lint && c8 --reporter=text npm run mocha",
    "lint": "eslint src --ext .ts",
    "mocha": "cross-env NODE_ENV=test mocha --full-trace --exit --timeout 30000",
    "mochadebug": "cross-env NODE_ENV=test; mocha -R spec ./test/*.js --full-trace --inspect-brk",
    "lcov-report": "c8 report --reporter=lcov",
    "coveralls": "c8 report --reporter=text-lcov | coveralls",
    "build:es": "esbuild ./src/start.ts --bundle --platform=node --outfile=lib/start.cjs --minify --tree-shaking=true --sourcemap=inline",
    "build:clean": "rimraf lib",
    "build": "npm-run-all lint build:clean build:es",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {}\""
  },
  "engines": {
    "node": ">= 20.8.0"
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release-plus/docker",
        {
          "name": "docker.io/restorecommerce/resource-srv",
          "skipLogin": true
        }
      ],
      [
        "@semantic-release-plus/docker",
        {
          "name": "ghcr.io/restorecommerce/resource-srv",
          "skipLogin": true
        }
      ]
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
